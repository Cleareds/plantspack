{
  "expo": {
    "name": "PlantsPack",
    "slug": "plantspack",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "plantspack",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#10b981"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.plantspack.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "PlantsPack needs your location to show nearby vegan places on the map.",
        "NSPhotoLibraryUsageDescription": "PlantsPack needs access to your photo library to let you share images in your posts.",
        "NSCameraUsageDescription": "PlantsPack needs camera access to let you take photos for your posts."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#10b981"
      },
      "package": "com.plantspack.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow PlantsPack to access your photos to share in posts.",
          "cameraPermission": "Allow PlantsPack to use your camera to take photos for posts."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow PlantsPack to use your location to show nearby vegan places."
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.plantspack.app",
          "enableGooglePay": true
        }
      ],
      "expo-secure-store",
      "expo-video",
      "expo-web-browser"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
