{
  "name": "vegan-social",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:test": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:start": "npx supabase start",
    "db:stop": "npx supabase stop",
    "db:reset": "npx supabase db reset",
    "db:seed": "npx supabase db reset && npm run db:setup-complete",
    "db:seed-js": "npx supabase db reset && npm run db:setup-complete",
    "db:populate": "psql -h localhost -p 54322 -U postgres -d postgres -f supabase/seed.sql",
    "db:populate-js": "node scripts/seed-data.js",
    "db:setup-complete": "node scripts/create-test-users.js && node scripts/seed-data.js",
    "db:create-users": "node scripts/create-test-users.js",
    "db:standalone": "node scripts/standalone-setup.js",
    "db:fix-auth": "node scripts/fix-auth-users.js",
    "db:studio": "echo 'Open Supabase Studio at: http://localhost:54323'",
    "dev:full": "npm run db:start && npm run dev",
    "test": "playwright test --reporter=list",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:chrome": "playwright test --project=chromium --reporter=list",
    "test:mobile": "playwright test --project='Mobile Chrome' --reporter=list",
    "test:ci": "playwright test --config=playwright.config.ci.ts",
    "test:vercel": "playwright test --config=playwright.config.vercel.ts",
    "test:deploy": "bash scripts/vercel-deploy.sh",
    "test:fast": "playwright test --project=chromium --workers=1 --reporter=list",
    "test:setup": "npm run db:start && npm run db:seed",
    "test:quick": "playwright test --reporter=list",
    "test:teardown": "npm run db:stop", 
    "test:clean": "bash scripts/clean-test-artifacts.sh",
    "fix:github-actions": "bash scripts/github-actions-cleanup.sh"
  },
  "dependencies": {
    "@stripe/stripe-js": "^7.7.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.52.0",
    "@types/leaflet": "^1.9.20",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.525.0",
    "next": "15.4.3",
    "psql": "^0.0.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-leaflet": "^5.0.0",
    "stripe": "^18.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.3",
    "supabase": "^2.31.8",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
